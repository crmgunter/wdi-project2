<h1>Users</h1>

<button class="btn">
    <a href="users/new">Create a new account</a>
</button>
<div class="container user-container-thumbnail">
    {{#each users}}
    <div class="user-thumbnail">
        <img class="profile" src="{{image}}" />
        <h2>
            <a href="/users/{{_id}}">{{username}}</a>
        </h2>
    </div>
    {{/each}}
</div>

