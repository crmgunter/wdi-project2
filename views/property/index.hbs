<div class="row">
    <div class="col l4 s4">
        <div class="container show-container">
            <img class="profile responsive-img" src="{{user.image}}" />
            <h5>{{user.username}}</h5>
            <h5>{{user.firstName}} {{user.lastName}}</h5>
            <h6>{{user.email}}</h6>
            <h6>{{user.phoneNumber}}</h6>

            <button class="btn">
                <a href="/users/{{user._id}}/properties">Properties</a>
            </button>
            <button class="btn">
                <a href="/users/{{user._id}}/leases">Leases</a>
            </button>
            <button class="btn">
                <a href="/users/{{user._id}}/edit">Edit Account</a>
            </button>
            <form action="/users/{{user.id}}?_method=DELETE" method="POST">
                <button class="btn" type="submit">Delete {{user.username}}</button>
            </form>
        </div>
    </div>

    <div class="col l8 s8 container">
        <div class="property-index">
            <h4>Properties</h4>
            {{#each user.properties}}
            <img class="responsive-img" src="{{homeImage}}" />
            <p>
                <a href="properties/{{id}}">{{address}}</a>
            </p>
            <p>{{price}}</p>
            {{/each}}
            
            <button class="btn">
                <a href="properties/new">Add a new property</a>
            </button>

            <button class="btn">
                <a href="/users/{{user._id}}">Back to user</a>
            </button>
        </div>



    </div>
</div>