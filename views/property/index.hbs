<div class="sidenav-container">
    <ul id="slide-out" class="side-nav fixed">
        <li>
            <div class="user-view">
                <div class="background">
                    <img class="responsive-img" src="https://images.unsplash.com/photo-1503990264798-c3f4cd657162?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=ffa6c5bb5550761ee8d395fd9b05eb4a&auto=format&fit=crop&w=800&q=60">
                </div>
                <a href="/users/{{user.id}}">
                    <img class="circle" src="{{user.image}}">
                </a>
                <a href="#!name">
                    <span class="white-text name">{{user.firstName}} {{user.lastName}}</span>
                </a>
                <a href="#!email">
                    <span class="white-text email">{{user.email}}</span>
                </a>
            </div>
        </li>
        <li>
            <a href="/users/{{user._id}}/properties">Properties</a>
        </li>
        <li>
            <a class="waves-effect" href="/users/{{user._id}}/leases">Leases</a>
        </li>
        <li>
            <div class="divider"></div>
        </li>
        <li>
            <a href="/users/{{user._id}}/edit">Edit Profile</a>
        </li>
    </ul>
</div>


<div class="property-lease-index-nav">
    <a href="#" data-activates="slide-out" class="button-collapse">
        <i class="material-icons icon-position">account_circle</i>
    </a>
    <a href="/users/{{user.id}}/properties/new">Add Property</a> | 
    <a href="/users/{{user.id}}">Back to User</a>
</div>
<div class="row">
    <div class="col l3 s12"></div>
    <div class="col l9 s12 container">
        <div class="property-index">

            <h4>{{user.username}}'s Properties</h4>



            {{#each user.properties}}
            <img class="responsive-img general-img-style" src="{{homeImage}}" />
            <p>
                <h5>
                    <a href="properties/{{id}}">{{address}}</a>
                </h5>
            </p>
            <p>${{price}}</p>
            {{/each}}

        <button class="btn">
            <a href="properties/new">Add a new property</a>
        </button>

        <button class="btn">
            <a href="/users/{{user._id}}">Back to user</a>
        </button>

        </div>
    </div>
</div>