<h1>New Listing</h1>

<form class="newuser-form-container" method="POST" action="/users/{{userId}}/properties">
    <div>
        <label for="address">Address</label>
        <input type="text" name="address">
    </div>
    <div>
        <label for="landlord">Landlord</label>
        <input type="text" name="landlord">
    </div>
    <div>
        <label for="price">Price</label>
        <input type="text" name="price">
    </div>
    <div>
        <label for="description">Description</label>
        <input type="text" name="description">
    </div>
    <div>
        <label for="homeImage">Image URL</label>
        <input type="text" name="homeImage">
    </div>
    <button class="btn" type="submit">Add Property</button>
    <button class="btn">
        <a href="/users/{{userId}}/properties">cancel</a>
    </button>
</form>

